import tkinter as tk

# --- User profile with trash count ---
user_profile = {
    "trash_discarded": 14,  # You can change this to test different levels
    "badges": ["First Badge", "Carbon Saver"]
}

# --- GUI setup ---
root = tk.Tk()
root.title("Green Fintech App - View Task Dashboard")
root.geometry("400x600")

# --- Clear screen utility ---
def clear_screen():
    for widget in root.winfo_children():
        widget.destroy()

# --- Main Page ---
def show_main_page():
    clear_screen()
    tk.Label(root, text="ğŸ  Main Page", font=('Arial', 18, 'bold')).pack(pady=20)
    tk.Button(root, text="ğŸ“‹ View Task Dashboard", command=show_task_dashboard).pack(pady=10)

# âœ… --- View Task Dashboard ---
def show_task_dashboard():
    clear_screen()
    tk.Label(root, text="ğŸ§¹ Your Green Tasks", font=('Arial', 18, 'bold')).pack(pady=10)

    # Trash count
    trash_count = user_profile.get("trash_discarded", 0)
    tk.Label(root, text=f"ğŸ—‘ Trash Discarded: {trash_count} items").pack(pady=10)

    # Progress level
    if trash_count < 5:
        level = "ğŸ”¸ Beginner"
    elif trash_count < 10:
        level = "ğŸ”¹ Learner"
    elif trash_count < 20:
        level = "ğŸŒ¿ Green Champ"
    else:
        level = "ğŸŒŸ Eco Hero"
    tk.Label(root, text=f"ğŸ“ˆ Progress Level: {level}").pack(pady=5)

    # Task status
    tk.Label(root, text="ğŸ“‹ Tasks:", font=('Arial', 14, 'underline')).pack(pady=5)
    if trash_count < 5:
        tk.Label(root, text="â¡ï¸ Discard 5 items to earn your first badge").pack()
    elif trash_count < 10:
        tk.Label(root, text="âœ… First badge unlocked! ğŸ‰").pack()
        tk.Label(root, text="â¡ï¸ Discard 10 items to unlock Carbon Saver").pack()
    elif trash_count < 20:
        tk.Label(root, text="âœ… Carbon Saver badge unlocked! ğŸ…").pack()
        tk.Label(root, text="â¡ï¸ Discard 20 items to reach Eco Hero level").pack()
    else:
        tk.Label(root, text="ğŸŒŸ Eco Hero achieved! Keep it up!").pack()

    # Back button
    tk.Button(root, text="â¬… Back to Main", command=show_main_page).pack(pady=20)

# --- Launch the app ---
show_main_page()
root.mainloop()
