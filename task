import tkinter as tk

# --- User profile with trash count ---
user_profile = {
    "trash_discarded": 14,  # You can change this to test different levels
    "badges": ["First Badge", "Carbon Saver"]
}

# --- GUI setup ---
root = tk.Tk()
root.title("Green Fintech App - View Task Dashboard")
root.geometry("400x600")

# --- Clear screen utility ---
def clear_screen():
    for widget in root.winfo_children():
        widget.destroy()

# --- Main Page ---
def show_main_page():
    clear_screen()
    tk.Label(root, text="🏠 Main Page", font=('Arial', 18, 'bold')).pack(pady=20)
    tk.Button(root, text="📋 View Task Dashboard", command=show_task_dashboard).pack(pady=10)

# ✅ --- View Task Dashboard ---
def show_task_dashboard():
    clear_screen()
    tk.Label(root, text="🧹 Your Green Tasks", font=('Arial', 18, 'bold')).pack(pady=10)

    # Trash count
    trash_count = user_profile.get("trash_discarded", 0)
    tk.Label(root, text=f"🗑 Trash Discarded: {trash_count} items").pack(pady=10)

    # Progress level
    if trash_count < 5:
        level = "🔸 Beginner"
    elif trash_count < 10:
        level = "🔹 Learner"
    elif trash_count < 20:
        level = "🌿 Green Champ"
    else:
        level = "🌟 Eco Hero"
    tk.Label(root, text=f"📈 Progress Level: {level}").pack(pady=5)

    # Task status
    tk.Label(root, text="📋 Tasks:", font=('Arial', 14, 'underline')).pack(pady=5)
    if trash_count < 5:
        tk.Label(root, text="➡️ Discard 5 items to earn your first badge").pack()
    elif trash_count < 10:
        tk.Label(root, text="✅ First badge unlocked! 🎉").pack()
        tk.Label(root, text="➡️ Discard 10 items to unlock Carbon Saver").pack()
    elif trash_count < 20:
        tk.Label(root, text="✅ Carbon Saver badge unlocked! 🏅").pack()
        tk.Label(root, text="➡️ Discard 20 items to reach Eco Hero level").pack()
    else:
        tk.Label(root, text="🌟 Eco Hero achieved! Keep it up!").pack()

    # Back button
    tk.Button(root, text="⬅ Back to Main", command=show_main_page).pack(pady=20)

# --- Launch the app ---
show_main_page()
root.mainloop()
